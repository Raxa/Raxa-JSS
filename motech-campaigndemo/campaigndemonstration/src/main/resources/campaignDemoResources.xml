<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
            http://www.springframework.org/schema/context
            http://www.springframework.org/schema/context/spring-context-3.0.xsd
            http://www.springframework.org/schema/util
            http://www.springframework.org/schema/util/spring-util-3.0.xsd">

	<import resource="classpath:voxeoResources.xml" />
	<import resource="classpath:applicationMessageCampaign.xml" />
	<import resource="applicationCmsLiteApi.xml" />
	<import resource="applicationSmsHttp.xml" />

	<util:properties id="credentialProperties"
		location="classpath:smscredentials.properties" />
	<util:properties id="pregnancyMessages"
		location="classpath:pregnancymessages.properties" />

	<bean id="patientDatabase" class="org.ektorp.impl.StdCouchDbConnector">
		<constructor-arg value="patients" />
		<constructor-arg ref="couchDbInstance" />
	</bean>

	<bean id="patientDAO"
		class="org.motechproject.CampaignDemo.dao.PatientsCouchDBDAOImpl">
		<constructor-arg ref="patientDatabase" />
	</bean>

	<!-- For bootstrapping content at server startup -->
	<bean id="contentInitiator" class="org.motechproject.CampaignDemo.dao.ContentInitiator"
		init-method="bootstrap">
	</bean>


	<bean id="testListener" class="org.motechproject.CampaignDemo.listeners.TestListener" />
	
	<bean id="smsService" class="org.motechproject.sms.api.service.SmsServiceImpl">
		<constructor-arg ref="messageSplitter" />
	</bean>

	<bean id="messageSplitter" class="org.motechproject.sms.api.MessageSplitter">
	</bean>

</beans>